.header
  .home-menu.pure-menu.pure-menu-open.pure-menu-horizontal.pure-menu-fixed
    %ul
      %li.pure-menu-selected
        %a(href="#") Home 
      %li
        %a(href="#") Sign Out

.splash-container
  .splash
    - if flash[:success]
      %aside.success
        = flash[:success]
    - elsif flash[:error]
      %aside.error
        = flash[:error]

    %h1.splash-head 
      - if @task
        = @title
      - else
        No Tasks To Do!
    %p.splash-subhead
      - if @active
        How is it going?
      - elsif @task
        Ready to get started?
      - else
        Scroll down to add some tasks.

    - if @task and !@active
      %p
        %a.pure-button.pure-button-primary(href="/tasks/#{@task.id}/start") Get Started

.content-wrapper
  .content
    %h2.content-head.is-center
      Add More Tasks

    .content
      %h2.content-subhead
        %i.fa.fa-plus
        Add a new task

      %p
        Overwhelmed? Log some tasks and feel better!

      .pure-g
        .l-box-lrg.pure-u-1.pure-u-md-2-5
          = form_for @new_task, :html => { :class => "pure-form pure-form-aligned" } do |f|
            %fieldset
              .pure-control-group
                = f.label :title, "Title:"
                = f.text_field :title, :class => "pure-u-1-2"

              .pure-control-group
                = f.label :importance, "Value:"
                = select_tag :importance, options_for_select(@task_importances)

              .pure-controls
                = f.submit :class => "pure-button pure-button-primary"


